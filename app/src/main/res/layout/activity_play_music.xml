<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <FrameLayout
        android:id="@+id/play_media_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b3000000"/>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/PlayMusicTitle"
            android:id="@+id/play_media_music_title"
            android:layout_width="224dp"
            android:layout_height="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="91dp"
            android:layout_marginLeft="91dp"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/play_media_music_artist"
            style="@style/PlayMusicArtist"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:layout_marginStart="97dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="60dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/play_media_music_thumbnail"
            android:layout_width="210dp"
            android:layout_height="218dp"
            android:layout_marginTop="190dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btn_music_favorite"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="490dp"
            android:background="@drawable/btn_media_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:layout_width="314dp"
            android:layout_height="22dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="560dp"
            android:progressDrawable="@drawable/seekbar_media_music_bg"
            android:splitTrack="false"
            android:thumb="@drawable/mobile_img_progress_handle_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </SeekBar>

        <TextView
            android:id="@+id/play_media_music_progress"
            style="@style/PlayMusicTime"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="590dp"
            android:gravity="center"
            android:text="00:00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/play_media_music_duration"
            style="@style/PlayMusicTime"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_marginTop="590dp"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:text="00:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="109dp"
            android:layout_marginTop="620dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/play_media_music_prev"
                android:layout_width="137dp"
                android:layout_height="109dp"
                android:background="@drawable/btn_media_prev"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/play_media_music_play"
                android:layout_width="110dp"
                android:layout_height="109dp"
                android:background="@drawable/btn_media_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/play_media_music_next"
                android:layout_width="137dp"
                android:layout_height="109dp"
                android:background="@drawable/btn_media_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>