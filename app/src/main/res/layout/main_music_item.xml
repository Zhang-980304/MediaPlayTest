<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingRight="8dp">

    <FrameLayout
        android:id="@+id/music_item_background_contents"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/music_item_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/music_item_title"
            style="@style/PlayMusicTitle"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="19dp"
            android:gravity="left"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Dance Monkey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/music_item_artist"
            style="@style/PlayMusicArtist"
            android:layout_width="270dp"
            android:layout_height="27dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="19dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="Dance Monkey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_music_item_favor"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="end"
            android:visibility="gone"
            android:background="@drawable/btn_media_favorite" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>